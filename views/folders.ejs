<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/output.css">
    <script src="https://kit.fontawesome.com/725392aa44.js" crossorigin="anonymous"></script>
    <title>HellHoleIO</title>
</head>
<body>
    <header class=" border-b-2 bg-zinc-100">
        <nav class="flex justify-between items-center w-full px-[10%] py-2">
          <div class="h-28 w-40 rounded-lg p-2 ">
            <a href=<%=`/user/${user.id}`%>><img src="/images/hellholeiologo.webp" class="w-full h-full" /></a>
          </div>
          <!-- Upload Form -->
          <form method="post" action="/log-out" enctype="multipart/form-data" ><button class="p-2 px-3 bg-red-500 text-white rounded-md">logout</button></form>
        </nav>
      </header>
      <main class="  min-h-screen mx-[10%] xl:mx-[15%] bo\rder-2 rounded-md ">
        <h1 class=" text-3xl font-semibold p-5">Welcome Back <%= user.username? user.username: "user" %></h1>
        <!-- Header Tab  -->
        <section class="*:p-3 border-2 py-5 border-b-0 flex w-full  lg:justify-between flex-col lg:flex-row items-center gap-5 flex-1 bg-slate-50 rounded-t-md ">
          <div  class="h-full">
            <h3 class="text-4xl font-bold "><%= folder.name%></h3></div>
        <!-- Right Side -->
        <form class=" flex items-center flex-col lg:flex-row gap-5" method="POST" enctype="multipart/form-data" action=<%=`/folder/${folder.id}/upload`%>  >
            <div class="flex gap-5">
              <label for="file"><i class="fa-solid fa-file-circle-plus text-4xl hover:text-blue-400"></i></label>
            <input name="file" id="file" type="file" class="file:hidden w-0">
            <p id="fileValue" class="text-2xl font-semibold text-slate-600 ">Add a File</p>
            </div>
          <button class="p-3 px-4 bg-black rounded-lg text-white w-full disabled:bg-zinc-600" id="folderSubmitButton" disabled>Upload</button>
       </form>
        </section>
        <!-- Files -->
        <section class="grid grid-rows-1 border-l-2 border-r-2 ">
            <% if(folder.files.length > 0){ %>
                <% folder.files.forEach((f)=>{ %>
                    <div class="flex p-5 border-2 justify-between col-span-2 items-center even:bg-slate-200 hover:bg-slate-300 group">
                      <span class="font-semibold text-3xl "><%=f.name%></span>
                          <div class=" gap-3  text-4xl items-center hidden transition-all duration-200 ease-in-out group-hover:flex">
                              <button id="downloadFolderContent"><i class="fa-solid fa-download hover:text-red-700"></i></button>
                              <button id="Edit Folder Name"><i class="fa-solid fa-pen-to-square hover:text-red-700"></i></button>
                              <button id="Delete Folder"><i class="fa-solid fa-trash hover:text-red-700"></i></button>
                          </div>
                    </div>
                    <% })} else{ %>
                        <section class="min-h-screen bg-slate-200 flex justify-center flex-col align-top">
                            <h3 class="text-5xl text-slate-50 text-center font-semibold h-min ">Empty Folder</h3>
                            <div class="w-full">
                                <img src="/images/noFolders.png" class="w-1/3 h-2/3 mx-auto">
                            </div>
                        </section>
                        <% }%>
        </section>
    </main>
</body>
</html>