<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <script src="https://kit.fontawesome.com/725392aa44.js" crossorigin="anonymous"></script>
    <link rel='stylesheet' href='/stylesheets/output.css' />
  </head>
  <body class="min-h-screen bg-gradient-to-tr from-red-600 to-yellow-400 bg-no-repeat">
    <!-- Form setup for Sign up Login -->
    <main class="flex justify-center items-center h-screen my-auto ">
   <div class="relative w-10/12  transition-all ">
    <div class="grid grid-cols-1 min-h-[90vh] max-h-full w-full border-2 bg-white rounded-lg overflow-hidden  ">
    <section id="login-section" class=" grid-cols-1 transition-all duration-500 w-full ">
      <div class=" m-10 flex justify-between items-center">
        <h1 class="text-center block text-5xl  xl:text-6xl font-bold">HellHole.IO</h1>
        <img src="/images/hellhole-logo.webp" class="rounded-full w-16 h-16" />
      </div>
      <!-- form to sign in -->
      <form action="/login" method="post" class=" flex flex-col m-14 mt-0 p-10 pt-0 gap-5 text-2xl md:text-3xl xl:text-5xl  justify-center items-center *:w-full">    
        <h1 class="m-5 text-center font-semibold text-5xl lg:text-6x">Welcome Back</h1>
       <h3 class="text-slate-600 hidden lg:block text-center text-3xl lg:text-4xl">Welcome back! Please enter your details.</h3>
        <div class="max-w-[800px]">
         <label for="username">Username</label><br>
        <input required placeholder="Username" name="username" id="username" type="text" class="p-4 rounded-md text-3xl border-2 w-full">
        </div>
        <div class="max-w-[800px]">
         <label for="password">Password</label><br>
         <input required type="password"  placeholder="Password" name="password" id="password" min="3" class="p-4 rounded-md text-3xl border-2 w-full"> 
        </div>
        <button type="submit" class="py-4 px-3 bg-zinc-800 text-white w-40 max-w-[800px] ">Sign In</button>
        <p class="block text-center  ">Not a user? <button class="text-blue-700 cursor" type="button" id="sign-up">Sign up</button></p>
      </form>
    </section>
    <section id="sign-up-section" class=" absolute top-0 left-0 w-full  transition-all duration-500 -translate-x-full opacity-0  ">
      <div class=" m-10 flex justify-between items-center">
        <h1 class="text-center block text-5xl  xl:text-6xl font-bold">HellHole.IO</h1>
        <img src="/images/hellhole-logo.webp" class="rounded-full w-16 h-16" />
      </div>
               <!-- form to sign in -->
              <form action="/signUp" method="post" class=" flex flex-col mx-14 p-10 pt-0 mt-0 gap-5 xl:text-5xl text-2xl md:text-3xl  justify-center items-center *:w-full *:max-w-[70%] ">
              <h1 class="p-2 m-5 text-center font-semibold text-5xl lg:text-6xl">Sign Up</h1>
              <h3 class="text-slate-600 hidden lg:block text-center text-3xl lg:text-4xl" >Welcome! Please create an account to continue.</h3>
              <div class="">
                <label for="username">Username</label><br>
                <input required placeholder="Username" name="username" id="username" type="text" class="p-4 rounded-md text-3xl border-2 w-full">
                </div>
              <div>
                 <label for="password">Password</label><br>
                 <input required type="password"  placeholder="Password" name="password" id="password" min="3" class="p-4 rounded-md text-3xl border-2 w-full"> 
              </div>
              <div>
               <label for="confirm_password">Confirm Password</label><br>
                <input required type="password"  placeholder="Confirm Password" name="confirm_password" id="confirm_password" min="3" class="p-4 rounded-md text-3xl border-2 w-full">
              </div>
              <button type="submit" class="py-4 px-3 bg-zinc-800 text-white w-40 ">Sign Up</button>
              <p class="block text-center text-md ">Already a user? <button class="text-blue-700"  type="button" id="login-btn">Sign in</button></p>
              </form>
       </section> 
    </div>
  </main>

     <script src="/javascripts/indexScripts.js"></script>
     <div class="translate-x-full -translate-x-full"></div>
 </body>
</html>
